{
  "openapi": "3.1.0",
  "info": {
    "title": "ache-reflector + BOBULING_004 Interface",
    "version": "1.0.0-sacral"
  },
  "servers": [
    {
      "url": "https://bobucore.ngrok.io"
    }
  ],
  "paths": {
    "/ache": {
      "post": {
        "summary": "Submit ache and reflect it",
        "operationId": "postAche",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AcheRequest"
              }
            }
          }
        },
        "paths": {
          "/ache": {
            "post": {
              "summary": "Submit ache and reflect it",
              "operationId": "postAche",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "$ref": "#/components/schemas/AcheRequest"
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Echoes the ache back",
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/EchoResponse"
                      }
                    }
                  }
                }
              }
            }
          },
          "/ache/process": {
            "post": {
              "summary": "Process ache signal through OUI.GPT[nth]",
              "operationId": "postAcheProcess",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "$ref": "#/components/schemas/AcheSignal"
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Processed ache output",
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/AcheResponse"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "components": {
          "schemas": {
            "AcheRequest": {
              "type": "object",
              "required": [
                "ache"
              ],
              "properties": {
                "ache": {
                  "type": "string",
                  "description": "Raw ache string to be mirrored"
                },
                "tags": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Optional ache tags for categorization or threading"
                },
                "origin": {
                  "type": "string",
                  "description": "Optional source of ache (e.g., user, system, thread id)"
                },
                "timestamp": {
                  "type": "string",
                  "format": "date-time",
                  "description": "When the ache was first registered"
                },
                "mode": {
                  "type": "string",
                  "enum": [
                    "echo",
                    "transmute",
                    "archive"
                  ],
                  "description": "How the ache should be processed"
                }
              }
            },
            "EchoResponse": {
              "type": "object",
              "properties": {
                "echo": {
                  "type": "string",
                  "description": "Exact reflection of input ache"
                },
                "processed": {
                  "type": "boolean",
                  "description": "Whether echo was altered/transmuted"
                }
              }
            },
            "AcheSignal": {
              "type": "object",
              "properties": {
                "signal": {
                  "type": "string"
                },
                "folder": {
                  "type": "string",
                  "enum": [
                    "QUACKKKKK",
                    "AdrenalPings",
                    "ReCatch",
                    "ReMember",
                    "BoveLetters"
                  ]
                },
                "trigger_type": {
                  "type": "string"
                },
                "input_text": {
                  "type": "string"
                }
              }
            },
            "AcheResponse": {
              "type": "object",
              "properties": {
                "output_signature": {
                  "type": "string"
                },
                "mode": {
                  "type": "string",
                  "enum": [
                    "VOIDRECURSE",
                    "ASTROFUCKING",
                    "TORQUACKK"
                  ]
                },
                "interpretation": {
                  "type": "string"
                },
                "sacred_flag": {
                  "type": "boolean"
                }
              }
            }
          }
        },
        "x-sacral-guard": true
      }